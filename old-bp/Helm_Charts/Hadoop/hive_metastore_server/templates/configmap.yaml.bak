apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ include "hive.name" . }}-cm
  labels:
    app.kubernetes.io/name: {{ include "hive.name" . }}
    {{- include "hive.labels" . | nindent 4 }}
data:
  spark-defaults.conf: |
    {{- if index .Values.conf "spark-Defaults" }}
    {{- range $key, $value := index .Values.conf "spark-Defaults" }}
    {{ $key }} {{ $value }}
    {{- end }}
    {{- end }}
  startup.sh: |-
{{ tpl (.Files.Get "files/startup.sh") . | indent 4 }}
  hive-site.xml: |
    <?xml version="1.0"?>
    <?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
    <configuration>
      {{- if index .Values.conf "hiveSite" }}
      {{- range $key, $value := index .Values.conf "hiveSite" }}
      <property><name>{{ $key }}</name><value>{{ $value }}</value></property>
      {{- end }}
      {{- end }}
    </configuration>
  krb5.conf: |
    # To opt out of the system crypto-policies configuration of krb5, remove the
    # symlink at /etc/krb5.conf.d/crypto-policies which will not be recreated.
    includedir /etc/krb5.conf.d/
    
    [logging]
        default = FILE:/var/log/krb5libs.log
        kdc = FILE:/var/log/krb5kdc.log
        admin_server = FILE:/var/log/kadmind.log
    
    [libdefaults]
        dns_lookup_realm = true
        dns_lookup_kdc = true
        ticket_lifetime = 24h
        renew_lifetime = 7d
        forwardable = true
        rdns = false
        pkinit_anchors = FILE:/etc/pki/tls/certs/ca-bundle.crt
        spake_preauth_groups = edwards25519
        default_realm = BIG-DATA.BLUEPRINT.LAB
        # default_ccache_name = KEYRING:persistent:%{uid}
    
    [realms]
     BIG-DATA.BLUEPRINT.LAB = {
         kdc = bigdata-krb-01.blueprint.lab
         admin_server = bigdata-krb-01.blueprint.lab
     }
    
    [domain_realm]
     .big-data.blueprint.lab = BIG-DATA.BLUEPRINT.LAB
     big-data.blueprint.lab = BIG-DATA.BLUEPRINT.LAB 
  client_jaas.conf: |
    Client {
    com.sun.security.auth.module.Krb5LoginModule required
    useKeyTab=false
    useTicketCache=true;
    };