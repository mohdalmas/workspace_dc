apiVersion: v1
kind: Secret
metadata:
  name: {{ include "hadoop.fullname" . }}-secret
  labels:
    app: {{ include "hadoop.name" . }}
    chart: {{ include "hadoop.chart" . }}
    release: {{ .Release.Name }}
type: Opaque
data:
  hadoop.service.keytab: |-
    {{ .Files.Get "files/hadoop.service.keytab"| indent 2 }} 
  hbase.service.keytab: |-
    {{ .Files.Get "files/hbase.service.keytab" | b64enc }} 
  yarn.service.keytab: |-
    {{(.Files.Get "files/yarn.service.keytab")| b64enc }} 

    